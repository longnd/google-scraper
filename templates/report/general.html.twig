{% extends 'base.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <h1 class="h3 mt-4 mb-2 text-gray-800">{{ 'label.scraping_reports'|trans }}</h1>
        <p class="mb-4">
            {{ 'message.all_scraping_request_histories'|trans }}
        </p>

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">{{ 'label.history'|trans }}</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>{{ 'label.date'|trans }}</th>
                                <th>{{ 'label.total_keywords'|trans }}</th>
                                <th>{{ 'label.completed'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for request in requests %}
                            <tr>
                                <td><a href="{{ path('detailReport', {'id': request.id}) }}">{{ request.createdAt|date }}</a></td>
                                <td>{{ request.results|length }}</td>
                                <td>{{ request.isCompleted ? 'Yes': 'No' }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}